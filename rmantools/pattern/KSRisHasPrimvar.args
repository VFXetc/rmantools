<args format="1.0">

    <info plugin="KSRisHasPrimvar" revision="$Revision" date="$Date">
        KSRisHasPrimvar: Determines if the current surface is from Shave and a Haircut.
    </info>

    <shaderType>
        <tag value="pattern"/>
    </shaderType>
    <rfmdata nodeid="20000004" classification="rendernode/RenderMan/pattern"/>
    
    <param name="primvarName" label="Primitive Variable" type="string" default="">
        <help>Which primitive variable to check for?</help>
        <tags><tag value="string"/></tags>
    </param>

    <param name="assumeTrue" type="float" input="True" default="0" widget="checkBox">
        <help>Force output to be true.</help>
        <tags><tag value="checkBox"/></tags>
    </param>

    <output name="result" label="Result">
        <tags><tag value="float"/></tags>
    </output>

</args>
